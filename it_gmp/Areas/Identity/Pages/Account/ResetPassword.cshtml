@page
@model ResetPasswordModel
@{
	Layout = null;
	ViewData["Title"] = "Reset password";
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<title>Chữ ký điện tử</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<!-- App favicon -->
	<link rel="shortcut icon" href="/images/favicon.png">
	<!--- FONTS -->
	<link rel="stylesheet" id="font-css" href="https://fonts.googleapis.com/css?family=Arimo%3A400%2C500%2C600%2C400i%2C700&amp;display=swap&amp;ver=5.7.6" type="text/css" media="all">
	<!-- App css -->

	<link href="/assets/css/icons.css" rel="stylesheet" type="text/css" />
	<link href="/admin/css/admin.min.css" rel="stylesheet" type="text/css" />

</head>

<body class="account-body accountbg">

	<!-- Log In page -->
	<div class="row vh-100 ">
		<div class="col-12 align-self-center">
			<div class="auth-page">
				<div class="card auth-card shadow-lg">
					<div class="card-body">
						<div class="px-3">

							<div class="text-center auth-logo-text">
								<h4 class="mt-0 mb-3 mt-5">Thay đổi mật khẩu</h4>
								@*<p class="text-muted mb-0">Điền Email và hệ thống sẽ gửi đến cho bạn</p>*@
							</div> <!--end auth-logo-text-->


							<form class="form-horizontal auth-form my-4" method="post">
								<div asp-validation-summary="ModelOnly" class="text-danger"></div>
								<input asp-for="Input.Code" type="hidden" />
								<input asp-for="Input.Email" type="hidden" />
								<div class="form-group">
									<label asp-for="Input.Password" class="form-label"></label>
									<div class="input-group mb-3">
										<input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
									</div>
								</div><!--end form-group-->
								<div class="form-group">
									<label asp-for="Input.ConfirmPassword" class="form-label"></label>
									<div class="input-group mb-3">
										<input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
									</div>
								</div><!--end form-group-->

								<div class="form-group mb-0 row">
									<div class="col-12 mt-2">
										<button class="btn btn-gradient-primary btn-round btn-block waves-effect waves-light" type="submit">Thay đổi <i class="fas fa-sign-in-alt ml-1"></i></button>
									</div><!--end col-->
								</div> <!--end form-group-->
							</form><!--end form-->
						</div><!--end /div-->

					</div><!--end card-body-->
				</div><!--end card-->
			</div><!--end auth-page-->
		</div><!--end col-->
	</div><!--end row-->
</body>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}

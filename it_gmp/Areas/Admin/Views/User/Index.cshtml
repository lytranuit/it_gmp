@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="row clearfix">
    <div class="col-12">
        <section class="card card-fluid">
            <h5 class="card-header drag-handle">
                <a class="btn btn-success btn-sm text-white" href="/admin/user/create">Thêm</a>
                <a class="btn btn-warning btn-sm text-white sync" href="/admin/user/sync"><i class="fas fa-sync mr-2"></i>Đồng bộ</a>
            </h5>
            <div class="card-body">
                <div class="table-responsive-md">
                    <table id="quanlytin" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Hình đại diện</th>
                                <th>Email</th>
                                <th>Họ và tên</th>
                                <th>Chữ ký</th>
                                <th>Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </section>
    </div>
</div>

@section Scripts{
    <script type='text/javascript'>
        $(document).ready(function () {
            let table = $('#quanlytin').DataTable({
                "stateSave": true,
                "processing": true,
                "serverSide": true,
                // "ordering": false,
                "ajax": {
                    "url": "/admin/user/table",
                    "dataType": "json",
                    "type": "POST",
                    'data': function (data) {
                    }
                },
                "columns": [{
                    "data": "id",
                }, {
                    "data": "image",
                    "className": "text-center",
                    "orderable": false
                }, {
                    "data": "email",
                    "className": "text-center",
                    "orderable": false
                }, {
                    "data": "name",
                    "className": "text-center",
                    "orderable": false
                }, {
                    "data": "sign",
                    "className": "text-center",
                    "orderable": false
                },
                {
                    "data": "action",
                    "orderable": false
                }
                ],
            });
            $(".sync").click(async function (e) {
                e.preventDefault();
                if (confirm("Đồng bộ tài khoản mail?") == true) {
                    var href = $(this).attr("href");
                    var result = await $.ajax({
                        url: href,
                        type: "POST"
                    });
                    if (result.success) {
                        alert("Thành công!");
                        table.ajax.reload();
                    } else {
                        alert(result.error);
                    }
                }
            })
        });
    </script>
}

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<div class="row clearfix">
    <div class="col-12">
        <form method="POST" id="form" autocomplete="on">
            <section class="card card-fluid">
                <div class="card-header">
                    <div class="d-inline-block w-100">
                        <button type="submit" name="dangtin" class="btn btn-sm btn-primary float-right">Save</button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-9">

                            <div class="form-group row">
                                <div class="col-lg-6 mt-2">
                                    <b class="col-form-label">Tên:<span class="text-danger">*</span></b>
                                    <div class="pt-1">
                                        <input class="form-control form-control-sm" type='text' name="name" required="" placeholder="Tên" autocomplete="off" />
                                    </div>
                                </div>
                                <div class="col-lg-1 mt-2">
                                    <b class="col-form-label">Màu:</b>
                                    <div class="pt-1">
                                        <input class="form-control form-control-sm" type='color' name="color" autocomplete="off" />
                                    </div>
                                </div>
                                <div class="col-lg-1 mt-2">
                                    <b class="col-form-label">Kí hiệu:<span class="text-danger">*</span></b>
                                    <div class="pt-1">
                                        <input class="form-control form-control-sm" type='text' name="symbol" autocomplete="off" required />
                                    </div>
                                </div>
                                <div class="col-lg-1 mt-2">
                                    <b class="col-form-label">Thứ tự:</b>
                                    <div class="pt-1">
                                        <input class="form-control form-control-sm" type='number' name="stt" autocomplete="off" />
                                    </div>
                                </div>
                                <div class="col-lg-3 mt-2">
                                    <b class="col-form-label">Nhóm:<span class="text-danger">*</span></b>
                                    <div class="pt-1">
                                        @Html.DropDownList("group_id", (IEnumerable<SelectListItem>)ViewData["groups"], new
                                            {
                                                data_placeholder = "Nhóm",
                                                @class = "chosen form-control form-control-sm"
                                            })
                                    </div>
                                </div>
                                <div class="col-lg-6 mt-2">
                                    <b class="col-form-label">Người nhận:</b>
                                    <div class="pt-1">
                                        @Html.DropDownList("users_receive[]", (IEnumerable<SelectListItem>)ViewData["users"], new
                                            {
                                                multiple = "true",
                                                data_placeholder = "Người nhận",
                                                @class = "chosen form-control form-control-sm"
                                            })
                                    </div>
                                </div>

                                <div class="col-lg-6 mt-2">
                                    <b class="col-form-label">Người quản trị:</b>
                                    <div class="pt-1">
                                        @Html.DropDownList("users_manager[]", (IEnumerable<SelectListItem>)ViewData["users"], new
                                            {
                                                multiple = "true",
                                                data_placeholder = "Người quản trị",
                                                @class = "chosen form-control form-control-sm"
                                            })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="custom-control custom-switch switch-primary">
                                <input type="checkbox" class="custom-control-input" id="customSwitchPrimary" checked="" name="is_manager_create" value="true">
                                <label class="custom-control-label" for="customSwitchPrimary">Chỉ quản lý mới được tạo</label>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script type="text/javascript">
        var data = @Html.Raw(Json.Serialize(Model));
        if (data.users_follow) {
            data.users_follow = data.users_follow.map(function (item) {
                // item chính là phần tử đang lặp
                return item['user_id']; // giá trị trả về sẽ thay thế cho giá trị ban đầu của phần tử
            });
        }
        if (data.users_receive) {
            data.users_receive = data.users_receive.map(function (item) {
                // item chính là phần tử đang lặp
                return item['user_id']; // giá trị trả về sẽ thay thế cho giá trị ban đầu của phần tử
            });
        }
        if (data.users_manager) {
            data.users_manager = data.users_manager.map(function (item) {
                // item chính là phần tử đang lặp
                return item['user_id']; // giá trị trả về sẽ thay thế cho giá trị ban đầu của phần tử
            });
        }
        $(document).ready(function () {

            fillForm($("#form"), data);
        })

    </script>
}

@{
	ViewData["Title"] = "Edit";
	Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="row clearfix">

	<div class="page-title-box col-12">
		<div class="float-left">
			<ol class="breadcrumb">
				<li class="breadcrumb-item"><a href="javascript:void(0);">Hệ thống</a></li>
				<li class="breadcrumb-item"><a href="javascript:void(0);">Biểu mẫu</a></li>
				<li class="breadcrumb-item active">Sửa biểu mẫu</li>
			</ol>
		</div>
	</div>
	<div class="col-12">
		<form method="POST" id="form" autocomplete="on" enctype="multipart/form-data">
			<section class="card card-fluid">
				<div class="card-header">
					<div class="d-inline-block w-100">
						<button type="submit" name="dangtin" class="btn btn-sm btn-primary float-right">Cập nhật</button>
					</div>
				</div>
				<div class="card-body">
					<div class="form-group row">
						<div class="col-lg-3 mt-2">
							<b class="col-form-label">Tên:<i class='text-danger'>*</i></b>
							<div class="pt-1">
								<input class="form-control form-control-sm" type='text' name="name" required="" placeholder="Tên" autocomplete="off" />
							</div>
						</div>
						<div class="col-lg-3 mt-2">
							<b class="col-form-label">Loai:<i class='text-danger'>*</i></b>
							<div class="pt-1">
								@Html.DropDownList("type_id", (IEnumerable<SelectListItem>)ViewData["type"], new { data_placeholder = "Chọn", @class = "chosen form-control form-control-sm" })
							</div>
						</div>

						<div class="col-lg-12 mt-2">
							<b class="col-form-label">File:<i class='text-danger'>*</i></b>
							<div class="pt-1">
								<input name="file" class="form-control form-control-file" type="file" placeholder="Chọn file" autocomplete="off" />
							</div>
						</div>
					</div>
				</div>
			</section>
		</form>
	</div>
</div>


@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
	<script type="text/javascript">
    var data = @Html.Raw(Json.Serialize(Model));
    $(document).ready(function(){
        fillForm($("#form"),data);
    })

	</script>
}

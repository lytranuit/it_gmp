@using Microsoft.AspNetCore.Identity
@using it.Areas.Admin.Models

@inject UserManager<UserModel> userManager;
@addTagHelper *, it
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
    var user = await userManager.GetUserAsync(User);
    var is_admin = await userManager.IsInRoleAsync(user, "Administrator");
}
<div class="page-title-box">
    <h4 class="page-title">Biểu mẫu</h4>
</div>
<div class="row clearfix">
    <div class="col-12">
        <section class="card card-fluid">

            @if (is_admin)
            {
                <h5 class="card-header drag-handle">
                    <a class="btn btn-success btn-sm text-white" href="/admin/Template/create">Thêm</a>
                </h5>
            }
            <div class="card-body">
                <div class="table-responsive-md">
                    <table id="quanlytin" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Tên</th>
                                <th>Loại</th>
                                <th>Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </section>
    </div>
</div>

@section Scripts{
<script type='text/javascript'>
    $(document).ready(function() {
        let table = $('#quanlytin').DataTable({
            "stateSave": true,
            "processing": true,
            "serverSide": true,
            // "ordering": false,
            "ajax": {
                "url": "/admin/Template/table",
                "dataType": "json",
                "type": "POST",
                'data': function(data) {
                }
            },
            "columns": [{
                    "data": "id",
                }, {
                    "data": "name",
                    "orderable": false
                }, {
                    "data": "type",
                    "orderable": false
                },
                {
                    "data": "action",
                    "orderable": false
                }
            ],
        });
    });
</script>
}